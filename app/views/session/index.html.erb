<%= render "layouts/admin/header" %>
<body>
  <div class="container">
    <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
        <div class="row">
            <div class="col-md-12 text-center">
            <%= link_to("/") do %>
                <%= image_tag("kemenperin.png") %>
            <% end %>
            </div>
        </div>

        <div class="panel">

        	<% if flash[:notice] %>
           <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <b><i class="fa fa-bullhorn"></i> </b> <%= flash[:notice] %>
           </div>
	        <% end %>

	        <% if flash[:alert] %>
  	        <div class="alert alert-error alert-dismissable">
  	            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
  	            <b><i class="fa fa-bullhorn"></i> </b> <%= flash[:alert] %>
    		 	  </div>
	        <% end %>

            <div class="panel-body panel-vitrian" >
            <%= form_tag({:action => 'login_attempt'}, {:class => 'form-horizontal'}) do %>

                    <div class="input-group input-groupx">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <%= text_field_tag :username,nil,placeholder:'Username or Email',class:'form-control',:required => true %>
                    </div>

                    <div class="input-group input-groupx">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <%= password_field_tag :password,nil,placeholder:'Password',class:'form-control',:required => true %>
                    </div>

                    <div class="form-group input-groupx">
                        <!-- Button -->
                        <div class="col-sm-7 controls">
                          <%= button_tag(type: 'submit', class: "btn btn-block btn-blue btn-large",data:{disable_with: "Please wait..."}) do %>
				                     Masuk
		                       <% end %>

                       		<%= link_to('/forgot',data:{disable_with:"Loading...."}) do %>
                                Lupa password?
                            <% end %>
                        </div>



                        <div class="col-sm-5 controls">
                            <%= link_to('/register',class:"btn btn-block btn-set-focus btn-large",data:{disable_with:"Loading...."}) do %>
                                Daftar
                            <% end %>
                        </div>


                        <div class="col-sm-12 controls">
                        <HR/>
                            <%= link_to "Sign in with Facebook", "/auth/facebook",class: "btn btn-block btn-blue btn-large", id: "sign_in",data:{disable_with:"Loading...."} %>
                        </div>
                    </div>

          	<% end %>

            </div>
        </div>
    </div>
</div>
</body>

<%= render "layouts/admin/js" %>
