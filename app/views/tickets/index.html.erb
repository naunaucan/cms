<p id="notice"><%= notice %></p>

<h1>Listing Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Subject</th>
      <th>Message</th>
      <th>Is active</th>
      <th>Is read</th>
      <th>User</th>
      <th>Status</th>
      <th>Numbering</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.id %></td>
        <td><%= ticket.subject %></td>
        <td><%= ticket.message %></td>
        <td><%= ticket.is_active %></td>
        <td><%= ticket.is_read %></td>
        <td><%= ticket.user_id %></td>
        <td><%= ticket.status %></td>
        <td><%= ticket.numbering %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

